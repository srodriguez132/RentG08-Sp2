<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>IP</param-name>
        <param-value>localhost:3306</param-value>
    </context-param>
    <context-param>
        <param-name>BDNombre</param-name>
        <param-value>RentG08</param-value>
    </context-param>
    <context-param>
        <param-name>usuario</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>contrasena</param-name>
        <param-value>root</param-value>
    </context-param>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registro</servlet-name>
        <servlet-class>servlets.Registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginAdmin</servlet-name>
        <servlet-class>servlets.LoginAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Buscar</servlet-name>
        <servlet-class>servlets.Buscar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscarLogueado</servlet-name>
        <servlet-class>servlets.BuscarLogueado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Reservar</servlet-name>
        <servlet-class>servlets.Reservar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReservaLogueada</servlet-name>
        <servlet-class>servlets.ReservaLogueada</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginReserva</servlet-name>
        <servlet-class>servlets.LoginReserva</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registro</servlet-name>
        <url-pattern>/Registrarse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginAdmin</servlet-name>
        <url-pattern>/LoginAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Buscar</servlet-name>
        <url-pattern>/Buscar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscarLogueado</servlet-name>
        <url-pattern>/BuscarLogueado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Reservar</servlet-name>
        <url-pattern>/Reservar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReservaLogueada</servlet-name>
        <url-pattern>/ReservaLogueada</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginReserva</servlet-name>
        <url-pattern>/LoginReserva</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
